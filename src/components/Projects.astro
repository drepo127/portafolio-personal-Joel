---
import Badge from '../components/Badge.astro';
import GithubIcon from "../icons/Github.astro"
import CodeIcon from "../icons/Code.astro"
import image from '../../public/image/capturaPL.png'

const PROJECTS = [
    {
        title: "Plannify",
        description: "Una aplicacion en React Native que permite crear i organizar quedadas o reuniones de grupos de usuarios entre amigos o a gran escala.",
        link: "https://www.google.com",
        github: "https://github.com/Planify-App",
        image: '/image/capturaPL.png',
        tags: ["React", "TailwindCSS", "NodeJS", "soket.io"],
        personalMensaje: "Proyecto de Grado"
    },
    {
        title: "Domo",
        description: "Una aplicacion android que permite crear, unirse y gestionar hogares para una mejor organizacion en el dia a dia.",
        image: 'https://placehold.co/300x200',
        tags: ["Supabase", "Kotlin", "Android", ],
        personalMensaje: "Proyecto de Grado"
    },
    {
        title: "La charca del pejelagarto Web",
        description: "Una pagina web en angular donde puedes comprar los productos de la charca del pejelagarto.",
        image: '/image/capturaPL.png',
        tags: ["Angular", "NodeJS", "SQL"],
        personalMensaje: "Proyecto de Grado"
    },
]
---

{
    PROJECTS.map(({ image, title, description, link, github, tags, personalMensaje }) => (
        <article class="mb-10 ms-6">
            <h3 class="mb-4 text-2xl font-semibold text-gray-900 dark:text-white flex items-center gap-2">
                {title}
                {   
                    personalMensaje && (
                        <span>
                            <Badge>{personalMensaje}</Badge>
                        </span>
                    )
                }
            </h3>


            <ul class="flex flex-wrap gap-x-2 gap-y-1">
                {tags.map(tag => (
                    <li>{tag}</li>
                ))}
            </ul>
            <div class="flex items-center gap-x-2">
                <p class="mb-4 text-base font-normal text-gray-200 text-pretty dark:text-gray-400">{description}</p>
            
                <img src={image} alt={`Captura de pantalla del proyecto ${title}`}  class="w-[300px] h-[200px] rounded-lg shadow-sm hover:shadow-lg hover:scale-105 transition-transform duration-300 ease-in-out" />
            </div>
            {
                github && (
                    <a href={github} target="_blank" rel="noopener noreferrer">
                        <button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                            <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-transparent group-hover:dark:bg-transparent">
                                <div class="flex items-center gap-x-2">
                                   <GithubIcon class="size-6"/>
                                    Github 
                                </div>
                            </span>
                        </button>
                    </a>
                )
            }
            {
                link && (
                    <a href={link} target="_blank" rel="noopener noreferrer">
                        <button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                            <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-transparent group-hover:dark:bg-transparent">
                                <div class="flex items-center gap-x-2">
                                    <CodeIcon class="size-6"/>    
                                    Proyecto
                                </div>
                            </span>
                        </button>
                    </a>
                )
            }

        </article>
    ))
}